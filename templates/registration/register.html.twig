{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="cover-container register-cover">
    <div class="row justify-content-center">
        <div class="register-box col-lg-3">
        {% for flashError in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}
        
        <h1 class="text-center">Créer un compte Philentropy</h1>
        <div class="form-box col-10 ">
        {{ form_start(registrationForm) }}
            <div class="field">
            {{ form_row(registrationForm.pseudo, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="field">
            {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
            <small id="emailHelp" class="text-primary">Votre email restera privée.</small>
            </div>
            <div class="field">
            {{ form_row(registrationForm.plainPassword, {'label': 'Mot de passe', 'attr': {'class': 'form-control'}}) }}
            <small id="emailHelp" class="text-primary">Doit comporter au moins 6 caratères.</small>
            </div>
            <div class="field">
            {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
            <hr>
            </div>
            <div class="row bouton-form">
                <button type="submit" class="btn btn-lg btn-outline-success">S'enregistrer</button>
            </div>
        {{ form_end(registrationForm) }}
       </div>
    </div>
</div>
{% endblock %}
